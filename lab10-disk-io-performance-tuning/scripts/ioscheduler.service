[Unit]
Description=Set optimal I/O scheduler
After=multi-user.target

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'echo none > /sys/block/nvme0n1/queue/scheduler'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
